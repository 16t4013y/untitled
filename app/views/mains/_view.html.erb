
<h2>発言表示窓</h2>

<table>
  <% @recruitments.where("re_id = '発言'").order("updated_at DESC").each do |recruitment| %>
    <div class="box">
      <span><%= recruitment.acc_id %></span>
      <span><%= link_to account_show_path(recruitment.acc_id) do %>
          <%= recruitment.name %>
        <% end %>
      </span>
      <span><%= recruitment.created_at %></span>

      <span>
      <%= link_to '返信', comments_index_path(recruitment.id), method: :get %>
        </span>
      <span>
     <% if current_account.acc_id == recruitment.acc_id %>
      <%= link_to '削除🚮', recruitment, method: :delete, data: { confirm: '削除しますか?' } %>
    <%end %>
        </span>
      <div><%= recruitment.detail %></div>
      <br>
        </div>
  <% end %>
</table>
