<div class="form_tab">
  <input type="radio" name="form_tab" id="form_tab_1" aria-controls="first_tab02" checked>
  <label for="form_tab_1">発言</label>
  <input type="radio" name="form_tab" id="form_tab_2" aria-controls="second_tab02">
  <label for="form_tab_2">募集</label>
  <div class="form_tabpanels">
    <div class="form_tabpanel">
      <%= render partial: 'mains/form', locals:{recruitment: @recruitment, inputtag: @inputtag, view_com_num: @view_com_num, view_num: @view_num}%>
    </div>
    <div class="form_tabpanel">
      <%= render partial: 'mains/form_r', locals:{recruitment: @recruitment, inputtag: @inputtag, view_com_num: @view_com_num, view_num: @view_num}%>
    </div>
  </div>
</div>


<script>
  function change_from1() {
      var form1 = document.getElementById('form-type1').style;
      var form2 = document.getElementById('form-type2').style;
      var button1 = document.getElementById('form-type1-button');
      var button2 = document.getElementById('form-type2-button');

      form1.display = 'block';
      form2.display = 'none';
      button1.disabled=true;
      button2.disabled=false;

  }
  function change_from2() {
      var form1 = document.getElementById('form-type1').style;
      var form2 = document.getElementById('form-type2').style;
      var button1 = document.getElementById('form-type1-button');
      var button2 = document.getElementById('form-type2-button');

      form1.display = 'none';
      form2.display = 'block';
      button1.disabled=false;
      button2.disabled=true;

  }
</script>