<h2>結果選択</h2>

<%= form_with(model: @recruitment, local: true) do |f| %>

  <table>
    <tr>
      <td>
        <div class="box">
          <div>
            --募集--
          </div>
          <% if @recruitment.re_id == '募集'%>
            <div><%= @recruitment.title %></div>
          <% end %>
          <span><%= @recruitment.created_at %></span>
          <span><%= link_to account_show_path(@recruitment.acc_id) do %>
              <%= @recruitment.acc_id %>
            <% end %>
         </span>
          <div><%= @recruitment.detail %></div>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div style="height:60vh; overflow-y:scroll;">
          <table>
            <tr>
              <td>
                <div id="add_results">

                  <%= render partial: "comment", collection: @comments, locals:{form: f} %>

                </div>
              </td>
            </tr>
          </table>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div id="request_add_results">
          <%= button_to "さらに読み込む", comments_add_path(params[:id], @comments.size.to_s), method: :get, data: { disable_with: "処理中..." }, remote: true %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.hidden_field :resolved, value: "解決" %>
        <%= f.submit "結果決定" %>
      </td>
    </tr>

  </table>
<% end %>
